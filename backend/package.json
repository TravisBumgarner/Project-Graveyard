{
    "name": "backend",
    "author": "Travis Bumgarner",
    "scripts": {
        "sd:be": "export NODE_ENV=local && ts-node-dev ./index.ts",
        "build": "rm -rf ./build && tsc",
        "sp:be": "export NODE_ENV=production && node build/index.js",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./src/db/ormconfig.ts",
        "migration:generate": "export NODE_ENV=local && npm run typeorm migration:generate -- -n",
        "migration:run": "npm run typeorm migration:run",
        "migration:revert": "npm run typeorm migration:revert",
        "migration:run:dev": "export NODE_ENV=local && npm run migration:run",
        "migration:run:production": "export NODE_ENV=production && npm run migration:run",
        "migration:run:gcp-sql-proxy": "export NODE_ENV=gcp-proxy-migrations && npm run migration:run",
        "migration:run:docker": "export NODE_ENV=local && docker exec -it phraseaday-backend npm run migration:run:dev",
        "migration:generate:docker": "docker exec -it phraseaday-backend npm run migration:generate",
        "precommit": "echo \"---------------------------- NOTHING TO SEE HERE ON BACKEND ----------------------------\"",
        "deploy:staging": "export NODE_ENV=staging && npm run build && gcloud config set project phraseaday-staging && gcloud builds submit --tag gcr.io/phraseaday-staging/backend && gcloud run deploy backend --image gcr.io/phraseaday-staging/backend --platform managed --region us-central1",
        "deploy:production": "export NODE_ENV=production && npm run build && gcloud config set project phraseaday-production && gcloud builds submit --tag gcr.io/phraseaday-production/backend && gcloud run deploy backend --image gcr.io/phraseaday-production/backend --platform managed --region us-central1",
        "lint:run": "npx eslint --ext .ts ./src/**",
        "lint:fix": "npx eslint --ext .ts ./src/** --fix",
        "cloudsql:staging": "../../cloud_sql_proxy -instances=phraseaday-staging:us-central1:phreaseaday-staging=tcp:0.0.0.0:1234",
        "cloudsql:production": "../../cloud_sql_proxy -instances=phraseaday-production:us-central1:phraseaday-production=tcp:0.0.0.0:1234"
    },
    "keywords": [],
    "license": "ISC",
    "dependencies": {
        "@sentry/node": "^6.18.1",
        "@sentry/tracing": "^6.18.1",
        "body-parser": "^1.19.2",
        "cloudinary": "^1.28.1",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.2",
        "express-graphql": "^0.12.0",
        "firebase-admin": "^10.0.2",
        "graphql": "^16.3.0",
        "pg": "^8.7.3",
        "runtypes": "^6.5.0",
        "sqlite3": "^5.0.2",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typeorm": "^0.2.41",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.17",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "eslint": "^8.10.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4"
    }
}